@using aspIdentityLearn.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}


<!DOCTYPE html>
<html class="no-js" lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="img/favicon.ico">
    <!-- Google Fonts
        ============================================ -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i,800" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundels/vendor/modernizr")

</head>
<body class="darklayout">

    <!-- Header top area start-->
    <!-- Header top area start-->
    <div class="wrapper-pro">
        <div class="content-inner-all">
            <!-- login Start-->
            <div class="login-form-area mg-t-30 mg-b-40">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-3"></div>
                                <section id="loginForm">
                                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "adminpro-form", id = "adminpro-form", role = "form" }))
                                    {
                                        <div class="col-lg-4">
                                            <div class="login-bg">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="logo">
                                                            <a href="#">
                                                                <img src="~/img/logo/log.png" alt="" />
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="login-title">
                                                            <h1>Login Form</h1>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="raw">
                                                    <div class="col-lg-12">
                                                        @Html.AntiForgeryToken()
                                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-lg-4">
                                                        <div class="login-input-head">
                                                            @Html.LabelFor(m => m.UserName, new { @class = "" })
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-8">
                                                        <div class="login-input-area">
                                                            @Html.TextBoxFor(m => m.UserName, new { @class = "" })
                                                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                                            <i class="fa fa-envelope login-user" aria-hidden="true"></i>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-lg-4">
                                                        <div class="login-input-head">
                                                            @Html.LabelFor(m => m.Password, new { @class = "" })
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-8">
                                                        <div class="login-input-area">
                                                            @Html.PasswordFor(m => m.Password, new { @class = "" })
                                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })                                                            <i class="fa fa-lock login-user"></i>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <div class="forgot-password">
                                                                    <a href="#">Forgot password?</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                      <!--
                                                        <div class="row">
                                                            <div class="col-lg-12">
                                                                <div class="login-keep-me">
                                                                    <label class="checkbox">
                                                                        @Html.LabelFor(m => m.RememberMe)                                                                        <i></i>Keep me logged in
                                                                    </label>
                                                                    <div class="checkbox">
                                                                        @Html.CheckBoxFor(m => m.RememberMe)

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>    
                                                      -->
                                                    </div>
                                                </div>
                                                
                                                <div class="row">
                                                    <div class="col-lg-4">

                                                    </div>
                                                    <div class="col-lg-8">
                                                        <div class="login-button-pro">
                                                            <input type="submit" value="Log in" class="login-button login-button-lg" />
                                                            <br />
                                                            <br />
                                                            <a href="Register" class="login-button login-button-rg">Register</a>

                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                
                                                @* Enable this once you have account confirmation enabled for password reset functionality
        <p>
            @Html.ActionLink("Forgot your password?", "ForgotPassword")
        </p>*@
                                            </div>
                                        </div>
                                    }
                                </section>


                    </div>
                </div>
            </div>


                        @section Scripts {
                            @Scripts.Render("~/bundles/jqueryval")
                        }

                    </div>
                </div>
                <!-- Footer Start-->
                <div class="footer-copyright-area">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="footer-copy-right">
                                    <p>&copy; @DateTime.Now.Year - IA project Application</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Footer End-->

                @Scripts.Render("~/bundels/vendor/jquery-1.11.3.min.js")
                @Scripts.Render("~/bundles/jqueryval")
                @Scripts.Render("~/bundels/bootstrap.min.js")
                @Scripts.Render("~/bundels/jquery.meanmenu.js")
                @Scripts.Render("~/bundels/jquery.mCustomScrollbar.concat.min.js")
                @Scripts.Render("~/bundels/jquerysticky")
                @Scripts.Render("~/bundels/jquery.scrollUp.min.js")
                @Scripts.Render("~/bundels/jquery.form.min.js")
                @Scripts.Render("~/bundels/jqueryvalidate")
                @Scripts.Render("~/bundels/form-active.js")

                @Scripts.Render("~/bundels/main.js")


</body>
</html>
